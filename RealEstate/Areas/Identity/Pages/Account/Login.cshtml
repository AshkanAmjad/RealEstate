@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row my-5">
    <div class="card shadow mx-auto col-11 col-sm-8 col-md-5 col-lg-4 col-xl-3 p-0">
        <div class="card-header d-flex justify-content-center align-items-center">
            <i class="fa fa-sign-in fa-lg mx-2"></i>
            <h4 class="fw-bold mb-0">Login</h4>
        </div>
        <div class="card-body">
            <div class="d-flex">
                <i class="fa fa-warning fa-lg text-danger me-2 p-1"></i>
                <p class="fw-bold fs-7">Please enter your information carefully.</p>
            </div>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.phoneNumber" class="form-control" autocomplete="phonenumber" aria-required="true" placeholder="09*********" />
                    <label asp-for="Input.phoneNumber" class="form-label">Phone Number</label>
                    <span asp-validation-for="Input.phoneNumber" class="text-danger fs-7"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control " autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger fs-7"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div>
                    <p class="mt-3">
                        <a asp-page="Register" class="text-danger"  asp-route-returnUrl="@Model.Input.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




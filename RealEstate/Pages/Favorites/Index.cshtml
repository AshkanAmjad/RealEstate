@page
@model RealEstate.Pages.Favorites.IndexModel
@{
    ViewData["Title"] = "Favorites";
}
<div class="row mt-5 mx-sm-5 mx-1 d-sm-flex">
    <partial name="_PanelPartial" />
    <div class="col-xl-9 col-12 mb-5">
        <div class="card shadow">
            <div class="card-header d-flex justify-content-center align-items-center">
                <i class="fa fa-list fa-lg mx-2 pt-1"></i>
                <h4 class="fw-bold mb-0">Favorites</h4>
            </div>
            <div class="card-body">
                <div class="row my-3">
                    @if (Model.FavoriteList.Any())
                        {
                        @foreach (var item in Model.FavoriteList)
                        {
                                <div class="p-2 col-lg-4 col-sm-6">
                                <a asp-page="/EstateDetails" asp-route-Id="@item.Id" class="text-decoration-none text-dark m-0">
                                        <div class="card p-0 shadow ">
                                            <img src="~/images/Estates/@item.Estate.Image" class="card-img-top" />
                                            <div class="card-body fs-7 fw-bold px-1 px-md-2 my-2">
                                                <div class="d-flex flex-md-column justify-content-between">
                                                    <div class="col-6 col-lg-12">
                                                        <p class="me-md-0 me-3 my-1">
                                                            <i class="fa fa-home fa-lg text-danger mx-1"></i>
                                                            <span class="ps-xl-2">@item.Estate.Title</span>
                                                        </p>
                                                        <p class="me-md-0 me-3 my-1">
                                                            <i class="fa fa-map-marker fa-lg text-danger mx-2"></i>
                                                            <span class="ps-xl-2">@item.Estate.Address</span>
                                                        </p>
                                                    </div>
                                                    <div class="col-6 col-lg-12">
                                                        <p class="me-md-0 me-3 my-1">
                                                            <i class="fa fa-arrows fa-lg text-danger mx-1"></i>
                                                            <span class="ps-xl-2">
                                                                @item.Estate.Metrage
                                                                m<sup>2</sup>
                                                            </span>
                                                        </p>
                                                        <div>
                                                            <i class="fa fa-money fa-lg text-danger mx-1 mb-2"></i>
                                                            <span class="ps-xl-2">
                                                                <u>@item.Estate.Price.ToDollar()</u>
                                                                <span>$</span>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            }
                        <div class="d-flex justify-content-center">
                            <nav aria-label="Page navigation">
                                <ul class="pagination mt-5">
                                    @if (Model.FavoriteList.HasPreviousPage)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="?pageIndex=@(Model.FavoriteList.PageIndex - 1)">&laquo;</a>
                                        </li>
                                    }

                                    @for (int i = 1; i <= Model.FavoriteList.TotalPages; i++)
                                    {
                                        <li class="page-item @(i == Model.FavoriteList.PageIndex ? "active" : "")">
                                            <a class="page-link" href="?pageIndex=@i">@i</a>
                                        </li>
                                    }

                                    @if (Model.FavoriteList.HasNextPage)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="?pageIndex=@(Model.FavoriteList.PageIndex + 1)">&raquo;</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>
                        }
                    </div>
                </div>
                <div class="row m-0">
                    <div class="col-5 mx-auto mb-3">
                        <a asp-page="/Index" class="btn btn-outline-secondary w-100 col-5 fs-7">
                            <i class="fa fa-times mx-2 d-block d-sm-inline"></i>
                            Cancel
                    </a>
                </div>
                </div>
        </div>
    </div>
</div>

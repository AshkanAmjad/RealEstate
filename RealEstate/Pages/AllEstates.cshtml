@page
@model RealEstate.Pages.AllEstatesModel
@{
    ViewData["Title"] = "Estates";

}
<div class="row  p-3 pb-0 border mx-2 mx-sm-3 my-3 shadow rounded">
    <form class="row my-2 p-0 mx-auto" method="get">
        <div class="col-sm-6 col-md-6">
            <input name="searchContext" placeholder="Enter your content ..." type="text" class="form-control" />
        </div>
        <div class="col-sm-4 col-md-4 p-sm-0 my-2 my-sm-0 col-8">
            <select class="form-control col-md-4" name="selectedFilter">
                <option selected>Choose your filter</option>
                <option value="1">Type</option>
                <option value="2">Address</option>
                <option value="3">Metrage</option>
                <option value="4">Price</option>
            </select>
        </div>
        <div class="col-sm-2 col-md-2 col-4 my-2 my-sm-0">
            <button type="submit" class="btn btn-primary fw-bold w-100" >
                <i class="fa fa-search"></i>
            </button>
        </div>
    </form>
    @if (Model.EstateList.Any())
    {
        @foreach (var item in Model.EstateList)
        {
            <div class="p-2 col-xl-2 col-lg-3 col-md-4 col-sm-6">
                <a asp-page="EstateDetails" asp-route-Id="@item.Id" class="text-decoration-none text-dark m-0">
                    <div class="card p-0 shadow ">
                        <img src="~/images/Estates/@item.Image" class="card-img-top" />
                        <div class="card-body fs-7 fw-bold p-1 p-md-2 my-2">
                            <div class="d-flex flex-md-column justify-content-between">
                                <div class="col-6 col-lg-12">
                                    <p class="me-md-0 me-3 my-1">
                                        <i class="fa fa-home fa-lg text-danger mx-1"></i>
                                        <span class="ps-xl-2">@item.Title</span>
                                    </p>
                                    <p class="me-md-0 me-3 my-1 d-flex">
                                        <i class="fa fa-list fa-lg text-danger mx-1 mt-1"></i>
                                        <span class="ps-xl-2">@item.Category.Title</span>
                                    </p>
                                </div>
                                <div class="col-6 col-lg-12">
                                    <p class="me-md-0 me-3 my-1">
                                        <i class="fa fa-map-marker fa-lg text-danger mx-2"></i>
                                        <span class="ps-xl-2">@item.Address</span>
                                    </p>
                                    <p class="me-md-0 me-3 my-1">
                                        <i class="fa fa-arrows fa-lg text-danger mx-1"></i>
                                        <span class="ps-xl-2">
                                            @item.Metrage
                                            m<sup>2</sup>
                                        </span>
                                    </p>
                                </div>
                            </div>
                            <hr />
                            <div>
                                <i class="fa fa-money fa-lg text-danger mx-1 mb-2"></i>
                                <span class="fw-bolder fs-6">
                                    <u>@item.Price.ToDollar()</u>
                                    <span class="fw-bold">$</span>
                                </span>

                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
        <div class="d-flex justify-content-center">
            <nav aria-label="Page navigation ">
                <ul class="pagination mt-2">
                    @if (Model.EstateList.HasPreviousPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?pageIndex=@(Model.EstateList.PageIndex - 1)">&laquo;</a>
                        </li>
                    }

                    @for (int i = 1; i <= Model.EstateList.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.EstateList.PageIndex ? "active" : "")">
                            <a class="page-link" href="?pageIndex=@i">@i</a>
                        </li>
                    }

                    @if (Model.EstateList.HasNextPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?pageIndex=@(Model.EstateList.PageIndex + 1)">&raquo;</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }
</div>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RealEstate</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*     <link rel="stylesheet" href="~/lib/bootstrap/dist/materialCss/mdb.min.css" />
    *@@*     <link rel="stylesheet" href="~/lib/bootstrap/dist/materialCss/mdb.dark.min.css" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="/images/icon/logo.svg">
    <link rel="stylesheet" href="~/icons/fontawesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/RealEstate.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/js/animate/animate.css" />
    <script src="~/js/sweet_alert/swap.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-light bg-white border-bottom box-shadow fixed-top m-0 p-0">
            <a class="navbar-brand" asp-page="/Index">
                <img src="/images/icon/logo.svg" class="brand-animation position-relative ms-2" />
            </a>
            <a class="navbar-brand fw-bold" asp-area="" asp-page="/Index">RealEstate</a>
            <button class="navbar-toggler mx-2" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-md-inline-flex px-4 justify-content-between">
                <ul class="navbar-nav flex-grow-1 my-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark @((User.Identity.IsAuthenticated)?"":"px-2")" asp-area="" asp-page="/Index">Home</a>
                    </li>
                    <li class="d-none d-md-block py-2 mx-1 text-muted">|</li>
                    <li class="nav-item">
                        <a class="nav-link text-dark @((User.Identity.IsAuthenticated)?"":"px-2")" asp-area="" asp-page="/AllEstates">Estates</a>
                    </li>
                    @if(User.Identity.IsAuthenticated && User.IsInRole(Roles.Admin)){
                    <li class="d-none d-md-block py-2 mx-1 text-muted">|</li>
                    <li class="nav-item">
                            <a class="nav-link text-dark @((User.Identity.IsAuthenticated)?"":"px-2")" href="~/admin/estates">Admin</a>
                        </li>
                    }
                </ul>
                @await Component.InvokeAsync("HeaderComponent")
            </div>
        </nav>
    </header>
    <div class="row justify-content-center pt-5 mt-5 mx-0">
        <partial name="_MessagePartial" />
        <main role="main" class="p-0">
            @RenderBody()
        </main>
    </div>
    <footer class=" text-center text-muted">
    <div class="container pb-0">
        <section class="mb-3">
                <a data-mdb-ripple-init
                   class="btn text-white btn-floating m-1"
                   style="background-color: #0A66C2;"
                   href="https://www.linkedin.com/in/ashkan-motahari/"
                   role="button">
                    <i class="fa fa-linkedin"></i>
                </a>
                <a data-mdb-ripple-init
                   class="btn text-white btn-floating m-1"
                   style="background-color: #000;"
                   href="https://github.com/AshkanAmjad"
                   role="button">
                    <i class="fa fa-github"></i>
                </a>
                <a data-mdb-ripple-init
                   class="btn text-white btn-floating m-1"
                   style="background-color: #F48024;"
                   href="https://stackoverflow.com/users/21545715/ashkan-amjad"
                   role="button">
                   <i class="fa fa-stack-overflow"></i>
                </a>
        </section>

    </div>
        <div class="text-center p-3 border-top">
        © @DateTime.Now.Year RealEstate, Inc
    </div>

</footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
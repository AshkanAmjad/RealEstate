@page
@model RealEstate.Pages.Admin.Categories.DetailsModel

@{
    ViewData["Title"] = "Details Categories";
}
<div class="row mt-5 mx-5">
    <partial name="_PanelPartial" />
    <div class="col-xl-9 col-12 mb-5">
        <div class="card shadow">
            <div class="card-header d-flex justify-content-center align-items-center">
                <i class="fa fa-list fa-lg mx-2 pt-1"></i>
                <h4 class="fw-bold mb-0">Details @Model.CategoryModel.Title Category</h4>
            </div>
            <div class="card-body">
                <div class="row my-3">
                    <div class="col-xl-6">
                        <div class="row">
                            <div class="col-5 col-lg-3 fs-7">
                                <i class="fa fa-check-circle-o "></i>
                                Title :
                            </div>
                            <div class="col-7 col-lg-9">
                                @Model.CategoryModel.Title.ToString()
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-6">
                        <div class="row my-3 my-xl-0">
                            <div class="col-5 col-lg-3 fs-7">
                                <i class="fa fa-check-circle-o "></i>
                                Description :
                            </div>
                            <div class="col-7 col-lg-9">
                                @if (Model.CategoryModel.Description != null)
                                {
                                    @Model.CategoryModel.Description.ToString()
                                }
                                else if (Model.CategoryModel.Description == null)
                                {
                                    <span>null</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="row col-12 m-0">
                        <div class="col-6">
                            <a class="btn btn-outline-primary w-100 mt-3" asp-page="Edit" asp-route-Id="@Model.CategoryModel.Id">
                                <i class="fa fa-edit mx-2"></i>
                                Edit
                            </a>
                        </div>
                        <div class="col-6">
                            <a asp-page="Index" class="btn btn-outline-secondary w-100 mt-3">
                                <i class="fa fa-times mx-2"></i>
                                Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

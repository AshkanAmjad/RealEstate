@page
@model RealEstate.Pages.Admin.UsersManagement.CreateModel
@{
    ViewData["Title"] = "Edit User";
}
<div class="row mt-5 mx-1 mx-sm-5">
    <partial name="_PanelPartial" />
    <div class="col-xl-9 col-12 mb-5">
        <div class="card shadow">
            <div class="card-header d-flex justify-content-center align-items-center">
                <i class="fa fa-edit fa-lg mx-2"></i>
                <h4 class="fw-bold mb-0">Edit</h4>
            </div>
            <div class=" card-body">
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="ViewModel.Id" />
                    <div asp-validation-summary="ModelOnly" role="alert"></div>
                    <div class="row my-3">
                        <div class="col-xl-6">
                            <div class="row my-3">
                                <div class="col-5 col-sm-4">
                                    <i class="fa fa-check-circle-o"></i>
                                    <label asp-for="ViewModel.FullName" class="form-label fs-7">Name :</label>
                                </div>
                                <div class="col-7 col-sm-8 ">
                                    <input asp-for="ViewModel.FullName" class="form-control" placeholder="Enter Your Name ..." />
                                    <span class="valid-feedback text-danger" asp-validation-for="ViewModel.FullName"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-5 col-sm-4">
                                    <i class="fa fa-check-circle-o"></i>
                                    <label asp-for="ViewModel.PhoneNumber" class="form-label  fs-7">Contact :</label>
                                </div>
                                <div class="col-7 col-sm-8">
                                    <div class="input-group">
                                        <input asp-for="ViewModel.PhoneNumber" class="form-control" placeholder="Enter Your Contact ..." />
                                    </div>
                                    <span class="valid-feedback text-danger" asp-validation-for="ViewModel.PhoneNumber"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="row my-3">
                                <div class="col-5 col-sm-4">
                                    <i class="fa fa-check-circle-o"></i>
                                    <label asp-for="ViewModel.Email" class="form-label  fs-7">Email :</label>
                                </div>
                                <div class="col-7 col-sm-8">
                                    <div class="input-group">
                                        <input asp-for="ViewModel.Email" class="form-control" placeholder="Enter Your Email ..." />
                                    </div>
                                    <span class="valid-feedback text-danger" asp-validation-for="ViewModel.Email"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row col-12 m-0">
                        <div class="col-12 col-sm-6">
                            <button class="btn btn-outline-success w-100 mt-3 fs-7" type="submit">
                                <i class="fa fa-save mx-2"></i>
                                Save
                            </button>
                        </div>
                        <div class="col-12 col-sm-6">
                            <a asp-page="Index" class="btn btn-outline-secondary w-100 mt-3 fs-7">
                                <i class="fa fa-times mx-2"></i>
                                Cancel
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@page
@model RealEstate.Pages.Admin.Estates.EditModel
@{
}
@{
    ViewData["Title"] = "Edit";
}
<div class="row mt-5 mx-1 mx-sm-5">
    <partial name="_PanelPartial" />
    <div class="col-xl-9 col-12 mb-5">
        <div class="card shadow">
            <div class="card-header d-flex justify-content-center align-items-center">
                <i class="fa fa-edit fa-lg mx-2"></i>
                <h4 class="fw-bold mb-0">Edit</h4>
            </div>
            <div class=" card-body">
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="ViewModel.Estate.Id" />
                    <input type="hidden" asp-for="ViewModel.Estate.Image" />
                    <select asp-for="ViewModel.SelectedCategory" asp-items="Model.ViewModel.CategoryOptions" class="form-control d-none"></select>
                    <div asp-validation-summary="ModelOnly" role="alert"></div>
                    <div class="row my-3">
                        <div class="col-xl-6">
                            <div class="row">
                                <div class="col-5 col-sm-4">
                                    <i class="fa fa-check-circle-o"></i>
                                    <label asp-for="ViewModel.Estate.Title" class="form-label fs-7">Title :</label>
                                </div>
                                <div class="col-7 col-sm-8 ">
                                    <input asp-for="ViewModel.Estate.Title" class="form-control" placeholder="Enter Title ..." />
                                    <span class="valid-feedback text-danger" asp-validation-for="ViewModel.Estate.Title"></span>
                                </div>
                            </div>
                            <div class="row my-3">
                                <div class="col-5 col-sm-4">
                                    <i class="fa fa-check-circle-o"></i>
                                    <label asp-for="ViewModel.Estate.Price" class="form-label  fs-7">Price :</label>
                                </div>
                                <div class="col-7 col-sm-8">
                                    <div class="input-group">
                                        <input asp-for="ViewModel.Estate.Price" class="form-control" placeholder="Enter Metrage ..." />
                                        <span class="input-group-text">$</span>
                                    </div>
                                    <span class="valid-feedback text-danger" asp-validation-for="ViewModel.Estate.Price"></span>
                                </div>
                            </div>
                            <div class="row my-3">
                                <div class="col-5 col-sm-4">
                                    <i class="fa fa-check-circle-o"></i>
                                    <label asp-for="ViewModel.Estate.Metrage" class="form-label  fs-7">Metrage :</label>
                                </div>
                                <div class="col-7 col-sm-8">
                                    <div class="input-group">
                                        <input asp-for="ViewModel.Estate.Metrage" class="form-control" placeholder="Enter Metrage ..." />
                                        <span class="input-group-text px-2">m<sup>2</sup></span>
                                    </div>
                                    <span class="valid-feedback text-danger" asp-validation-for="ViewModel.Estate.Metrage"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-6 ">
                            <div class="row">
                                <div class="col-5 col-sm-4">
                                    <i class="fa fa-check-circle-o"></i>
                                    <label asp-for="ViewModel.Estate.Address" class="form-label fs-7">Address :</label>
                                </div>
                                <div class="col-7 col-sm-8">
                                    <textarea asp-for="ViewModel.Estate.Address" rows="1" class="form-control" placeholder="Enter Address ..."></textarea>
                                    <span class="valid-feedback text-danger" asp-validation-for="ViewModel.Estate.Address"></span>
                                </div>
                            </div>
                            <div class="row my-3">
                                <div class="col-5 col-sm-4">
                                    <i class="fa fa-check-circle-o"></i>
                                    <label asp-for="ViewModel.Estate.Description"  class="form-label fs-7">Description :</label>
                                </div>
                                <div class="col-7 col-sm-8">
                                    <textarea asp-for="ViewModel.Estate.Description" rows="1" class="form-control" placeholder="Enter Description ..."></textarea>
                                </div>
                            </div>
                            <div class="row my-3">
                                <div class="col-5 col-sm-4">
                                    <i class="fa fa-check-circle-o"></i>
                                    <label class="form-label fs-7">Images :</label>
                                </div>
                                <div class="col-7 col-sm-8">
                                    <input asp-for="ViewModel.ImgUp" id="ImgUp" type="file" accept="image" class="form-control" />
                                    <img src="/images/Thumb/@Model.ViewModel.Estate.Image" id="imgPreview" class="border my-2 mx-auto rounded" width="128px" height="128px" />
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="row col-12 m-0">
                        <div class="col-6">
                            <button class="btn btn-outline-success w-100 mt-3 fs-7" type="submit">
                                <i class="fa fa-save d-block d-sm-inline mx-2"></i>
                                Save
                            </button>
                        </div>
                        <div class="col-6">
                            <a asp-page="Index" class="btn btn-outline-secondary w-100 mt-3 fs-7">
                                <i class="fa fa-times d-block d-sm-inline mx-2"></i>
                                Cancel
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $('#ImgUp').change(function () {
            readURL(this);
        });</script>

}